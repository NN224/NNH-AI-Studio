### 1. ai-proactive-service.ts

```typescript
/**
 * ğŸ§  AI PROACTIVE SERVICE
 *
 * ÙŠØ­Ù„Ù„ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª ÙˆÙŠÙˆÙ„Ø¯ Ø±Ø³Ø§Ù„Ø© Ø°ÙƒÙŠØ© ÙˆØ´Ø®ØµÙŠØ© Ù„Ù„Ù…Ø³ØªØ®Ø¯Ù…
 * Ø¨Ø¯Ù„ Ø§Ù„Ø±Ø³Ø§Ø¦Ù„ Ø§Ù„Ù€ generic
 */

// Types
interface ProactiveGreeting {
  greeting: string;           // "ØµØ¨Ø§Ø­ Ø§Ù„Ø®ÙŠØ± Ø£Ø­Ù…Ø¯!"
  insight: ProactiveInsight;
  context: AnalysisContext;
}

interface ProactiveInsight {
  type: InsightType;
  priority: 'high' | 'medium' | 'low';
  title: string;
  message: string;
  detailedAnalysis?: any;
  suggestedActions: SuggestedAction[];
}

type InsightType =
  | 'problem_detected'    // Ù…Ø´ÙƒÙ„Ø© ÙˆØ§Ø¶Ø­Ø©
  | 'opportunity'         // ÙØ±ØµØ©
  | 'competitor_alert'    // Ø§Ù„Ù…Ù†Ø§ÙØ³ Ø³ÙˆÙ‰ Ø´ÙŠ
  | 'positive_trend'      // Ø§Ù„Ø£Ù…ÙˆØ± ØªØªØ­Ø³Ù†
  | 'quiet_period'        // ÙØªØ±Ø© Ù‡Ø§Ø¯Ø¦Ø©
  | 'welcome_back'        // Ø¨Ø¹Ø¯ ØºÙŠØ§Ø¨
  | 'all_good';           // ÙƒÙ„ Ø´ÙŠ ØªÙ…Ø§Ù…

interface SuggestedAction {
  label: string;
  action: string;
  primary?: boolean;
}

// Main Functions
export async function generateProactiveGreeting(
  userId: string,
  locationId?: string
): Promise<ProactiveGreeting>;

export async function analyzeChangesSinceLastVisit(
  userId: string
): Promise<ChangesSummary>;

export async function detectPatterns(
  userId: string,
  locationId?: string
): Promise<DetectedPattern[]>;

export async function prioritizeInsight(
  changes: ChangesSummary,
  patterns: DetectedPattern[],
  competitorAlerts: CompetitorAlert[],
  dna: BusinessDNA
): Promise<ProactiveInsight>;
```

### 2. pending-actions-service.ts

```typescript
/**
 * ğŸ“‹ PENDING ACTIONS SERVICE
 *
 * Ø¥Ø¯Ø§Ø±Ø© Ø§Ù„Ø£Ø¹Ù…Ø§Ù„ Ø§Ù„Ù„ÙŠ AI Ø¬Ù‡Ø²Ù‡Ø§
 */

// Types
interface PendingAction {
  id: string;
  actionType: ActionType;
  referenceId: string;
  referenceData: any;
  aiGeneratedContent: string;
  aiConfidence: number;
  aiReasoning?: string;
  status: ActionStatus;
  requiresAttention: boolean;
  attentionReason?: string;
  createdAt: Date;
}

type ActionType = 'review_reply' | 'question_answer' | 'post' | 'offer';
type ActionStatus = 'pending' | 'approved' | 'rejected' | 'auto_published' | 'edited';

// Main Functions
export async function getPendingActions(
  userId: string,
  filters?: {
    actionType?: ActionType;
    status?: ActionStatus;
    requiresAttention?: boolean;
  }
): Promise<PendingAction[]>;

export async function createPendingAction(
  data: CreatePendingActionInput
): Promise<PendingAction>;

export async function approveAction(
  actionId: string,
  userId: string
): Promise<{ success: boolean; publishedTo?: string }>;

export async function rejectAction(
  actionId: string,
  userId: string,
  reason?: string
): Promise<{ success: boolean }>;

export async function editAndApproveAction(
  actionId: string,
  userId: string,
  editedContent: string
): Promise<{ success: boolean; publishedTo?: string }>;

export async function batchApprove(
  actionIds: string[],
  userId: string
): Promise<{
  success: boolean;
  approved: number;
  failed: number;
  errors?: string[];
}>;

export async function batchReject(
  actionIds: string[],
  userId: string,
  reason?: string
): Promise<{ success: boolean; rejected: number }>;
```

### 3. command-center-service.ts

```typescript
/**
 * ğŸ›ï¸ COMMAND CENTER SERVICE
 *
 * Ø§Ù„Ù€ orchestrator Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠ - ÙŠØ¬Ù…Ø¹ ÙƒÙ„ Ø´ÙŠ
 */

interface CommandCenterData {
  // Ø§Ù„ØªØ±Ø­ÙŠØ¨ Ø§Ù„Ø°ÙƒÙŠ
  proactiveGreeting: ProactiveGreeting;

  // Ø§Ù„Ø£Ø¹Ù…Ø§Ù„ Ø§Ù„Ù…Ø¹Ù„Ù‚Ø©
  pendingApprovals: {
    reviewReplies: PendingAction[];
    questionAnswers: PendingAction[];
    posts: PendingAction[];
    totalCount: number;
  };

  // ÙŠØ­ØªØ§Ø¬ Ø§Ù†ØªØ¨Ø§Ù‡ Ø´Ø®ØµÙŠ
  attentionRequired: {
    negativeReviews: PendingAction[];
    competitorAlerts: CompetitorAlert[];
    totalCount: number;
  };

  // Ø§Ù„Ø¥Ø­ØµØ§Ø¦ÙŠØ§Øª
  stats: {
    rating: number;
    ratingChange: number;
    totalReviews: number;
    newReviewsThisWeek: number;
