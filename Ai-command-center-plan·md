#### 1. pending_ai_actions
```sql
-- Ø§Ù„Ø£Ø¹Ù…Ø§Ù„ Ø§Ù„Ù„ÙŠ AI Ø¬Ù‡Ø²Ù‡Ø§ ÙˆØ¨Ø§Ù†ØªØ¸Ø§Ø± Ù…ÙˆØ§ÙÙ‚Ø© Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…
CREATE TABLE IF NOT EXISTS public.pending_ai_actions (
    id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
    user_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
    location_id UUID REFERENCES public.gmb_locations(id) ON DELETE CASCADE,

    -- Ù†ÙˆØ¹ Ø§Ù„Ø¹Ù…Ù„
    action_type TEXT NOT NULL CHECK (action_type IN (
        'review_reply',      -- Ø±Ø¯ Ø¹Ù„Ù‰ Ù…Ø±Ø§Ø¬Ø¹Ø©
        'question_answer',   -- Ø¥Ø¬Ø§Ø¨Ø© Ø¹Ù„Ù‰ Ø³Ø¤Ø§Ù„
        'post',              -- Ù…Ù†Ø´ÙˆØ±
        'offer'              -- Ø¹Ø±Ø¶
    )),

    -- Ù…Ø±Ø¬Ø¹ Ù„Ù„Ø¹Ù†ØµØ± Ø§Ù„Ø£ØµÙ„ÙŠ
    reference_id TEXT,           -- review_id, question_id, etc.
    reference_data JSONB,        -- Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø£ØµÙ„ÙŠØ© (Ø§Ù„Ù…Ø±Ø§Ø¬Ø¹Ø©ØŒ Ø§Ù„Ø³Ø¤Ø§Ù„ØŒ Ø¥Ù„Ø®)

    -- Ø§Ù„Ù…Ø­ØªÙˆÙ‰ Ø§Ù„Ù„ÙŠ AI ÙˆÙ„Ø¯Ù‡
    ai_generated_content TEXT NOT NULL,
    ai_confidence DECIMAL(5,2) DEFAULT 0,  -- 0-100
    ai_reasoning TEXT,           -- Ù„ÙŠØ´ AI Ø§Ø®ØªØ§Ø± Ù‡Ø§Ù„Ø±Ø¯

    -- Ø­Ø§Ù„Ø© Ø§Ù„Ø¹Ù…Ù„
    status TEXT DEFAULT 'pending' CHECK (status IN (
        'pending',           -- Ø¨Ø§Ù†ØªØ¸Ø§Ø± Ø§Ù„Ù…ÙˆØ§ÙÙ‚Ø©
        'approved',          -- ØªÙ…Øª Ø§Ù„Ù…ÙˆØ§ÙÙ‚Ø©
        'rejected',          -- Ù…Ø±ÙÙˆØ¶
        'auto_published',    -- Ù†Ø´Ø± ØªÙ„Ù‚Ø§Ø¦ÙŠØ§Ù‹ (autopilot)
        'edited'             -- ØªÙ… ØªØ¹Ø¯ÙŠÙ„Ù‡ Ù‚Ø¨Ù„ Ø§Ù„Ù…ÙˆØ§ÙÙ‚Ø©
    )),

    -- Ù„Ù„ØªØªØ¨Ø¹
    requires_attention BOOLEAN DEFAULT false,  -- ÙŠØ­ØªØ§Ø¬ Ø§Ù†ØªØ¨Ø§Ù‡ Ø´Ø®ØµÙŠ
    attention_reason TEXT,       -- Ù„ÙŠØ´ ÙŠØ­ØªØ§Ø¬ Ø§Ù†ØªØ¨Ø§Ù‡

    -- Timestamps
    created_at TIMESTAMPTZ DEFAULT now(),
    reviewed_at TIMESTAMPTZ,
    published_at TIMESTAMPTZ,

    -- Ù…Ù† Ø¹Ø¯Ù‘Ù„ Ø£Ùˆ ÙˆØ§ÙÙ‚
    reviewed_by UUID REFERENCES auth.users(id),
    edited_content TEXT          -- Ø§Ù„Ù…Ø­ØªÙˆÙ‰ Ø¨Ø¹Ø¯ Ø§Ù„ØªØ¹Ø¯ÙŠÙ„
);

-- Indexes
CREATE INDEX idx_pending_actions_user_status
    ON pending_ai_actions(user_id, status);
CREATE INDEX idx_pending_actions_type
    ON pending_ai_actions(action_type);
CREATE INDEX idx_pending_actions_attention
    ON pending_ai_actions(user_id, requires_attention)
    WHERE requires_attention = true;
CREATE INDEX idx_pending_actions_created
    ON pending_ai_actions(created_at DESC);

-- RLS
ALTER TABLE pending_ai_actions ENABLE ROW LEVEL SECURITY;
CREATE POLICY "Users manage own pending_actions"
    ON pending_ai_actions FOR ALL USING (auth.uid() = user_id);
```

#### 2. ai_proactive_insights
```sql
-- Ø§Ù„Ù€ insights Ø§Ù„Ù„ÙŠ AI ÙŠÙˆÙ„Ø¯Ù‡Ø§ proactively
CREATE TABLE IF NOT EXISTS public.ai_proactive_insights (
    id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
    user_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
    location_id UUID REFERENCES public.gmb_locations(id) ON DELETE CASCADE,

    -- Ù†ÙˆØ¹ Ø§Ù„Ù€ insight
    insight_type TEXT NOT NULL CHECK (insight_type IN (
        'problem_detected',      -- Ù…Ø´ÙƒÙ„Ø© ØªÙ… Ø§ÙƒØªØ´Ø§ÙÙ‡Ø§
        'opportunity',           -- ÙØ±ØµØ©
        'competitor_alert',      -- ØªÙ†Ø¨ÙŠÙ‡ Ù…Ù†Ø§ÙØ³
        'trend',                 -- trend Ù…Ù„Ø§Ø­Ø¸
        'suggestion',            -- Ø§Ù‚ØªØ±Ø§Ø­
        'milestone',             -- Ø¥Ù†Ø¬Ø§Ø²
        'welcome_back'           -- ØªØ±Ø­ÙŠØ¨ Ø¨Ø¹Ø¯ ØºÙŠØ§Ø¨
    )),

    -- Ø§Ù„Ø£ÙˆÙ„ÙˆÙŠØ©
    priority TEXT DEFAULT 'medium' CHECK (priority IN ('high', 'medium', 'low')),

    -- Ø§Ù„Ù…Ø­ØªÙˆÙ‰
    title TEXT NOT NULL,
    message TEXT NOT NULL,
    detailed_analysis JSONB,     -- ØªØ­Ù„ÙŠÙ„ Ù…ÙØµÙ„

    -- Ø§Ù„Ø¥Ø¬Ø±Ø§Ø¡Ø§Øª Ø§Ù„Ù…Ù‚ØªØ±Ø­Ø©
    suggested_actions JSONB DEFAULT '[]'::jsonb,
    -- [{label: "...", action: "...", primary: true/false}]

    -- Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø¯Ø§Ø¹Ù…Ø©
    supporting_data JSONB,       -- Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ù„ÙŠ Ø¨Ù†Ù‰ Ø¹Ù„ÙŠÙ‡Ø§ Ø§Ù„Ù€ insight

    -- Ø­Ø§Ù„Ø©
    is_read BOOLEAN DEFAULT false,
    is_dismissed BOOLEAN DEFAULT false,
    action_taken TEXT,           -- Ø´Ùˆ Ø³ÙˆÙ‰ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…

    -- Timestamps
    valid_until TIMESTAMPTZ,     -- Ù…ØªÙ‰ ÙŠØµÙŠØ± Ø§Ù„Ù€ insight ØºÙŠØ± relevant
    created_at TIMESTAMPTZ DEFAULT now(),
    read_at TIMESTAMPTZ,
    dismissed_at TIMESTAMPTZ
);

-- Indexes
CREATE INDEX idx_proactive_insights_user
    ON ai_proactive_insights(user_id, is_dismissed, created_at DESC);
CREATE INDEX idx_proactive_insights_type
    ON ai_proactive_insights(insight_type);
CREATE INDEX idx_proactive_insights_priority
    ON ai_proactive_insights(user_id, priority)
    WHERE is_dismissed = false;

-- RLS
ALTER TABLE ai_proactive_insights ENABLE ROW LEVEL SECURITY;
CREATE POLICY "Users manage own proactive_insights"
    ON ai_proactive_insights FOR ALL USING (auth.uid() = user_id);
```

#### 3. competitor_alerts
```sql
-- ØªÙ†Ø¨ÙŠÙ‡Ø§Øª Ø§Ù„Ù…Ù†Ø§ÙØ³ÙŠÙ†
CREATE TABLE IF NOT EXISTS public.competitor_alerts (
    id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
    user_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
    location_id UUID REFERENCES public.gmb_locations(id) ON DELETE CASCADE,

    -- Ù…Ø¹Ù„ÙˆÙ…Ø§Øª Ø§Ù„Ù…Ù†Ø§ÙØ³
    competitor_name TEXT NOT NULL,
    competitor_place_id TEXT,    -- Google Place ID

    -- Ù†ÙˆØ¹ Ø§Ù„ØªÙ†Ø¨ÙŠÙ‡
    alert_type TEXT NOT NULL CHECK (alert_type IN (
        'new_offer',             -- Ø¹Ø±Ø¶ Ø¬Ø¯ÙŠØ¯
        'rating_change',         -- ØªØºÙŠØ± Ø¨Ø§Ù„ØªÙ‚ÙŠÙŠÙ…
        'review_surge',          -- Ø²ÙŠØ§Ø¯Ø© Ø¨Ø§Ù„Ù…Ø±Ø§Ø¬Ø¹Ø§Øª
        'new_post',              -- Ù…Ù†Ø´ÙˆØ± Ø¬Ø¯ÙŠØ¯
        'price_change'           -- ØªØºÙŠØ± Ø¨Ø§Ù„Ø£Ø³Ø¹Ø§Ø±
    )),

    -- ØªÙØ§ØµÙŠÙ„
    alert_title TEXT NOT NULL,
    alert_details JSONB,

    -- Ø­Ø§Ù„Ø©
    is_read BOOLEAN DEFAULT false,
    is_actioned BOOLEAN DEFAULT false,
    action_taken TEXT,

    -- Timestamps
    created_at TIMESTAMPTZ DEFAULT now(),
    read_at TIMESTAMPTZ
);

-- Indexes
